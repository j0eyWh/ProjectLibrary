        <ComboBox x:Name="outCauseCombo" HorizontalAlignment="Left" Margin="16,41,0,0" VerticalAlignment="Top" Width="438">
            <ComboBoxItem Content="Uzura fizica"></ComboBoxItem>
            <ComboBoxItem Content="Uzura morala"></ComboBoxItem>
            <ComboBoxItem Content="Transfer catre alta biblioteca"></ComboBoxItem>
            <ComboBoxItem Content="Pierdere de catre cititori"></ComboBoxItem>
            <ComboBoxItem Content="Alta cauza:" IsEnabled="False"></ComboBoxItem>
