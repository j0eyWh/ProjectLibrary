            <Label x:Name="label" Content="Raport general" HorizontalAlignment="Left" Margin="256,0,0,0" VerticalAlignment="Top" Grid.Row="0" Width="206" Height="51" FontSize="29.333"/>
            <Label x:Name="signnatureLbl" Content="generat la data de ##/##/####" VerticalAlignment="Bottom" FontSize="26.667" Grid.Row="0" HorizontalAlignment="Center" Margin="168,0,167,10" Height="45" Width="378"/>

